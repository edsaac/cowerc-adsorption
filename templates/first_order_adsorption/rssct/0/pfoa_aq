FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      pfoa_aq;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -3 0 0 0 0 0];


internalField   uniform 0;

boundaryField
{
    "(front|back|right|left)"
    {
        type    empty;
    }
    
    top
    {
        type               uniformInletOutlet;
        /*
        In the 3-min experiment
            PFOA = 1525 ng/L = 1.525E-6 kg/mÂ³ 
        */
        uniformInletValue  constant 1.525E-6;
        phi                phi;
    }

    bottom
    {
        type            zeroGradient;
    }
}

